{
  "name": "thmanyah-backend",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "pnpm --filter \"./packages/*\" build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:cov": "turbo run test:cov",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean && rimraf node_modules .turbo && find . -name 'tsconfig.tsbuildinfo' -delete",
    "clean:full": "pnpm clean && docker compose down -v && docker system prune -f",
    "monorepo:check": "manypkg check",
    "monorepo:fix": "manypkg fix",
    "start:prod": "turbo run start:prod",
    "setup:env": "node scripts/setup-env.js",
    "docker:build": "docker build --target cms-api -t thmanyah/cms-api . && docker build --target discovery-api -t thmanyah/discovery-api . && docker build --target outbox-publisher -t thmanyah/outbox-publisher . && docker build --target sync-worker -t thmanyah/sync-worker .",
    "docker:build:cms-api": "docker build --target cms-api -t thmanyah/cms-api .",
    "docker:build:discovery-api": "docker build --target discovery-api -t thmanyah/discovery-api .",
    "docker:build:outbox-publisher": "docker build --target outbox-publisher -t thmanyah/outbox-publisher .",
    "docker:build:sync-worker": "docker build --target sync-worker -t thmanyah/sync-worker .",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "db:migrate": "pnpm --filter @thmanyah/database migration:run",
    "db:migrate:generate": "pnpm --filter @thmanyah/database migration:generate",
    "db:migrate:revert": "pnpm --filter @thmanyah/database migration:revert",
    "db:schema:sync": "pnpm --filter @thmanyah/database schema:sync",
    "postinstall": "pnpm build:packages && pnpm setup:env"
  },
  "devDependencies": {
    "@manypkg/cli": "0.24.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "symlink-dir": "^6.0.5",
    "ts-jest": "^29.2.5",
    "turbo": "^2.5.4",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
